<% layout('layouts/boielerplate') %> 

<div class="row">
    <h1 class="text-center">Creating New Campground</h1>
    <div class="col-6 offset-3">

        
            
            <form action="/campground" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class = 'mb-3'>
                    <label class="form-label" for="tittle">Tittle:</label>
                    <input class="form-control" type="text" id="tittle" name="carray[tittle]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
        
               <div class = 'mb-3'>
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="carray[location]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <div class="mb-3">
                   
                      <div class="form-file custom-file">
                            <input type="file" class="form-file-input" id="image" name="image" multiple>
                                 <label class="form-file-label" for="image">
                                  <span class="form-file-text custom-file-label" >Choose image(s)...</span>
                                  <span class="form-file-button" >Browse</span>
                                 </label>
                      </div>
                    </div>
               

<!-- <div class = 'mb-3'>
                    <label class="form-label" for="image">Image Url:</label>
                    <input class="form-control" type="text" id="image" name="carray[image]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div> -->

                <div class = 'mb-3'>
                    <label class="form-label" for="price">Campground Price:</label>
                    <div class="input-group">
                        <span class="input-text-group" id="price-label">$</span>
                        <input class="form-control" type="text" placeholder="0.00" id="price" aria-label="price" aria-describedby="price-label" name="carray[price]" required>  
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    
                </div>

                <div class = 'mb-3'>
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="text" id="description" name="carray[description]" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
        
                <br>
        <div class="mb-3">
            <button class="btn btn-success">Add campground</button>
        </div>
               
            </form>
            <br>
            <a href="/campground">Cancel</a>

    </div>
</div>


